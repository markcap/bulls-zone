!!!
%html

  %head
    %title
      =  "Bulls Zone " + yield(:title).to_s
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8", :application_type => 'browser'}/
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = yield(:head)

  %body
  #container
    #navbar
      #navbar_content
        #logo
          = link_to image_tag("bar-logo.jpg"), root_path
        #nav
          = link_to("Blog", "#")
          = link_to("Forums", "#")
          = link_to("Chat", chat_path)
          = link_to("Schedule", games_path)
          = link_to("Bulls Feed", "#")
    
          #nav_login
            - if user_signed_in?
              %span.menu_display_name= link_to current_user.display_name, edit_user_path(current_user)
              = link_to "Sign Out", destroy_user_session_path
            - else
              = link_to "Sign In/Sign Up!", new_user_session_path, :class => "nav_login_link"

    #main_content
      / #nav_login_form
      /   = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      /     = f.label :email
      /     = f.text_field :email
      /     
      /     = f.label :password
      /     = f.password_field :password
      /  
      /     - if devise_mapping.rememberable?
      /       = f.check_box :remember_me
      /       = f.label :remember_me
      / 
      /     = f.submit "Sign in"
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)
      = yield
    
  #footer
    Copyright Bulls Zone Inc. 
    = Date.today.year 
    all rights reserved
    %br
    = link_to "Contact", "#" 
    | 
    = link_to "Help", "#" 
    | 
    = link_to "Site Map", "#"