= error_messages_for @user
= simple_form_for user do |f|

  = f.input :display_name
  = f.input :email, :required => current_user.password_required?, :label => "Email (#{current_user.password_required? ? '' : 'optional,'} will not be visible to anyone)"
  - if @user.password_required?
    = f.input :password
    = f.input :password_confirmation, :label => 'Confirm Password'
    
  = f.button :submit, :value => 'Submit', :class => 'button large'