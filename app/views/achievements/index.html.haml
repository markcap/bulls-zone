- title "Achievements"

%table
  %tr
    %th Name
    %th Points
    %th Rank
  - for achievement in @achievements
    %tr
      %td= achievement.name
      %td= achievement.points
      %td= achievement.rank
      %td= link_to 'Show', achievement
      %td= link_to 'Edit', edit_achievement_path(achievement)
      %td= link_to 'Destroy', achievement, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Achievement", new_achievement_path
